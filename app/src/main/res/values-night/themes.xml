<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gastec" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/colorPrimaryNight</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="colorSurface">@color/colorPrimaryNight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:background">@color/black</item>
        <item name="primaryTitleColor">@color/primaryTitleColorNight</item>
        <item name="colorOnSurface">@color/primaryTitleColorNight</item>
    </style>

    <style name="CustomCardview1" parent="CardView">
        <item name="cardBackgroundColor">@color/colorPrimaryNight</item>
    </style>

    <style name="Background" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/colorPrimaryNight</item>
    </style>

    <style name="BackgroundDash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="PrimaryEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/teal_700</item>
    </style>

    <style name="SpinnerText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/black</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@color/teal_700</item>
        <item name="backgroundTint">@color/teal_700</item>
        <item name="android:padding">10dp</item>
    </style>


</resources>